        <FrameLayout
            android:id="@+id/fl_info_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="380dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="520dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_data_container"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop ="4dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_check_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Check-In Berhasil"
                    tools:textColor="@color/colorGreen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="24dp"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.25"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_full_name" />

                        <TextView
                            android:id="@+id/tv_full_name"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="Winonna Sarah" />

                        <TextView
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_id_number" />

                        <TextView
                            android:id="@+id/tv_nik"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="32750305382*****" />

                        <TextView
                            android:id="@+id/tv_hint_check_location"
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_check_in_location" />

                        <TextView
                            android:id="@+id/tv_check_in_location"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            tools:text="Kampus Yarsi - Jakarta" />

                        <TextView
                            android:id="@+id/tv_hint_check_date"
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_check_in_date" />


                        <TextView
                            android:id="@+id/tv_check_date"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="20 Sept 2021" />

                        <TextView
                            android:id="@+id/tv_check_time"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="10:03 WIB" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_body_temperature" />

                        <TextView
                            android:id="@+id/tv_temperature"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="-"
                            android:textSize="30sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_location_capacity" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_crowd"
                                style="@style/TextView.Value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_black"
                                android:maxLines="1"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="26sp"
                                tools:text="129" />

                            <TextView
                                android:id="@+id/tv_capacity"
                                style="@style/TextView.Value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="20sp"
                                tools:text="/1000" />

                        </LinearLayout>

                        <TextView
                            style="@style/TextView.Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_area" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_color_area"
                                style="@style/TextView.Value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_black"
                                android:maxLines="1"
                                tools:text="Red Area" />

                            <TextView
                                android:id="@+id/tv_name_area"
                                style="@style/TextView.Value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                tools:text="(Premier Grand Stand)" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorDivider" />

                <!--<ImageView
                    android:id="@+id/img_logo_agung_sedayu_group"
                    android:layout_width="wrap_content"
