                    android:src="@drawable/logo_agung_sedayu_group"
                    tools:ignore="ContentDescription" />-->

                <ImageView
                    android:id="@+id/img_logo_sbkmotul"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_sbkmotul"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_info_check"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/img_logo_itdc"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_itdc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/ll_supported_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_logo_itdc"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_supported_by"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="@string/powered_by"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_riset_ai_and_digital_buana"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginStart="3dp"
                    android:text="@string/riset_ai_and_digital_buana"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

